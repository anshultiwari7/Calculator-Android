<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anshul.calculator.Calculator"
    android:background="@android:color/holo_orange_light"
    android:layout_height="1500dp">

    <TextView
        android:inputType="textPersonName"
        android:text="0"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_width="3100dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:gravity="bottom|right"
        android:textSize="70dp"
        android:background="@android:color/black"
        android:textColor="@android:color/white"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="21dp"
        android:id="@+id/b7"
        android:text="7"
        android:layout_height="70dp" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/b7"
        android:layout_toRightOf="@+id/b7"
        android:layout_toEndOf="@+id/b7"
        android:id="@+id/b8" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignTop="@+id/b8"
        android:layout_toRightOf="@+id/b8"
        android:layout_toEndOf="@+id/b8"
        android:id="@+id/b9" />

    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/b9"
        android:layout_toRightOf="@+id/b9"
        android:layout_toEndOf="@+id/b9"
        android:id="@+id/bplu"
        android:layout_height="70dp" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/b7"
        android:layout_toLeftOf="@+id/b9"
        android:layout_toStartOf="@+id/b9"
        android:id="@+id/b5" />

    <Button
        android:text="6"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/b9"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5"
        android:id="@+id/b6" />

    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_below="@+id/b9"
        android:layout_toRightOf="@+id/b6"
        android:layout_toEndOf="@+id/b6"
        android:id="@+id/bmin"
        android:layout_height="70dp" />

    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/b4"
        android:layout_toLeftOf="@+id/b5"
        android:layout_toStartOf="@+id/b5"
        android:id="@+id/b1" />

    <Button
        android:text="3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/b6"
        android:layout_toRightOf="@+id/b5"
        android:layout_toEndOf="@+id/b5"
        android:id="@+id/b3" />

    <Button
        android:text="*"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/b3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/bast"
        android:layout_toRightOf="@+id/b6"
        android:layout_toEndOf="@+id/b6" />

    <Button
        android:text="C"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_below="@+id/b1"
        android:layout_toStartOf="@+id/b0"
        android:id="@+id/bclear"
        android:layout_toLeftOf="@+id/b0" />

    <Button
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/b0"
        android:layout_below="@+id/b2"
        android:layout_alignLeft="@+id/b2"
        android:layout_alignStart="@+id/b2" />

    <Button
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/bsla"
        android:layout_above="@+id/beql"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/b3"
        android:layout_toEndOf="@+id/b3" />

    <Button
        android:text="="
        android:layout_height="wrap_content"
        android:id="@+id/beql"
        android:layout_below="@+id/b0"
        android:layout_width="180dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/b2"
        android:layout_below="@+id/b5"
        android:layout_toRightOf="@+id/b1"
        android:layout_toEndOf="@+id/b1" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/b4"
        android:layout_alignBottom="@+id/b5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/b7" />

    <Button
        android:text="."
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:id="@+id/bdot"
        android:layout_alignBottom="@+id/b0"
        android:layout_toEndOf="@+id/b0"
        android:layout_below="@+id/b3"
        android:layout_toRightOf="@+id/b0" />

</RelativeLayout>
